<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="768dp"
        android:layout_height="800dp">

        <android.support.v4.view.ViewPager
            android:background="#00000000"
            android:id="@+id/pager_main"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >

        </android.support.v4.view.ViewPager>


        <Button android:id="@+id/btn_main_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prev"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />

        <Button android:id="@+id/btn_main_next"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="next"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />


        <Button android:id="@+id/btn_open_book"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="book"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="100dp"
            />
        <Button android:id="@+id/btn_open_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="note"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="100dp"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_open_interview"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_open_video"/>



    </LinearLayout>


</LinearLayout>
